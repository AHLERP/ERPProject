        }
    }
    $('#staticBackdrop1').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var id = button.data('id');
        var userid = button.data('userid');
        var acceptedid = button.data('acceptedid');
        var title = button.data('name');
        var description = button.data('description');
        $("#inputId").val(id);
        $("#inputUserId1").val(userid);
        $("#inputAcceptedId1").val(acceptedid);
        $("#inputTitle1").val(title);
        $("#inputDescription1").val(description);
    });
        
</script>
