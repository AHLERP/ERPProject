@{
    ViewData["Title"] = "Roller";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="d-flex align-items-top-center justify-content-center">
    <div class="col col-md-6">
        
    <div class="input-group mb-3 px-3">
        <input type="text" class="form-control" placeholder="Rol Adı" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <span class="input-group-text" id="basic-addon2"><button type="submit" class="btn btn-secondary" onclick="alert('Rol Eklenecek')">Ekle</button></span>
    </div>
</div>
<div class="col col-md-6">
    <h1>Roller</h1>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Rol Adı</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i < 10; i++)
        {
            <tr>
                <th scope="row">@i</th>
                <td>RolAd @i</td>
                <td>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            İşlemler
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <i class="dropdown-item">Düzenle</i>
                            <i class="dropdown-item text-danger">Sil</i>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
</div>
</div>