@{
    ViewData["Title"] = "User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="color:black;">Personeller</h1>

<div class="container" style="width: 80%;">
    <div class="input-group input-group-lg">
        <input type="text" class="form-control" placeholder="Arama Yap...">
        <span class="input-group-text"><i onclick="alert('Arama Yapılacak')">Ara...</i></span>
    </div>
</div>
<div class="position-relative">
    <div class="position-absolute top-0 end-0">
        <button class="btn btn-primary" onclick="alert('Personel Eklenecek')">Personel Ekle</button>
    </div>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Email</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i < 15; i++)
        {
            <tr>
                <th scope="row">@i</th>
                <td>Ad @i</td>
                <td>Soyad @i</td>
                <td>Mail @i</td>
                <td>
                    <div class="dropdown">
                        <button class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            İşlemler
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <i class="dropdown-item">İşlem 1</i>
                            <i class="dropdown-item">İşlem 2</i>
                            <i class="dropdown-item">İşlem 3</i>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

